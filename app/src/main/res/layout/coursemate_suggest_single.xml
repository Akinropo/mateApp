<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/cm_suggest_width"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/cm_card_margin"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp">

            <ImageView
                android:id="@+id/suggest_image"
                android:layout_width="@dimen/cm_suggest_image_size"
                android:layout_height="@dimen/cm_suggest_image_size"
                android:src="@drawable/ic_user_account" />

            <TextView
                android:id="@+id/suggest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:gravity="center"
                android:text="Akinropo Taiwo"
                android:textColor="@android:color/black"
                android:textSize="@dimen/cm_suggest_button_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/suggest_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="Computer Science Studies"
                android:textSize="@dimen/cm_suggest_dept_size" />

            <Button
                android:id="@+id/suggest_request_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/request_button_selector"
                android:padding="@dimen/cm_suggest_add_cm_padd"
                android:text="Add Coursemate"
                android:textSize="10sp" />
        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>