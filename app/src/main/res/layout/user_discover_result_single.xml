<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="170dp"
    android:layout_height="170dp"
    android:clickable="true"
    android:background="@drawable/circle_shape_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="1dp"
            android:gravity="center">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_user_account"
                android:id="@+id/suggest_image" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akinropo Taiwo"
                android:textSize="17dp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:singleLine="true"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:id="@+id/suggest_name"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Computer Science Studies"
                android:textSize="14dp"
                android:layout_margin="1dp"
                android:gravity="center"
                android:maxWidth="90dp"
                android:singleLine="true"
                android:layout_gravity="center"
                android:id="@+id/suggest_department"
                />
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/count_bg"
                android:layout_toRightOf="@+id/request_name"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="3sp"
                android:id="@+id/request_presence"
                android:visibility="visible"
                />

        </LinearLayout>




</LinearLayout>