<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/group_single_logo"
        android:layout_width="@dimen/cm_single_photo"
        android:layout_height="@dimen/cm_single_photo"
        android:layout_marginRight="7dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:singleLine="true"
        android:text="M"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/group_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/group_single_logo"
        android:layout_toRightOf="@+id/group_single_logo"
        android:singleLine="true"
        android:text="My Group"
        android:textColor="@color/primary_text"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/unread_count"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/group_single_name"
        android:layout_marginTop="5dp"
        android:background="@drawable/count_bg"
        android:gravity="center"
        android:text="5"
        android:textColor="@android:color/white"
        android:textSize="10dp"
        android:visibility="gone" />

</RelativeLayout>